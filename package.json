{
  "name": "linkvault-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@linkvault/web",
    "dev:api": "npm run dev --workspace=@linkvault/api",
    "dev:web": "npm run dev --workspace=@linkvault/web",
    "kill:force": "fuser -k 3002/tcp 2>/dev/null || true; fuser -k 5173/tcp 2>/dev/null || true; pkill -9 -f 'tsx.*src/index' || true; pkill -9 -f 'vite$' || true; pkill -9 -f 'node.*vite' || true; sleep 1; echo 'Force killed all dev servers'",
    "install:all": "npm install --workspaces",
    "build": "npm run build --workspaces",
    "lint": "npm run lint --workspaces"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.6.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.2.0",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0"
  },
  "dependencies": {
    "@prisma/client": "^6.18.0",
    "axios": "^1.13.1",
    "prisma": "^6.18.0"
  }
}
