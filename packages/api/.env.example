# Environment
NODE_ENV=development

# API Server Configuration
PORT=3002

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173

# Database Configuration
DATABASE_URL="postgresql://linkvault_app:your_secure_password@localhost:5432/linkvault?schema=app"
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=linkvault_app
DATABASE_PASSWORD=your_secure_password
DATABASE_NAME=linkvault
DATABASE_SCHEMA=app

# Encryption
# Generate encryption key using: openssl rand -base64 32
# CRITICAL: Keep this key secure and backed up - if lost, all encrypted data cannot be recovered
ENCRYPTION_MASTER_KEY=your_256_bit_encryption_master_key_here_at_least_32_bytes

# Authentication - JWT
# Generate secure secrets using: openssl rand -base64 32
JWT_ACCESS_SECRET=your_jwt_access_secret_here_at_least_32_chars_long
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here_at_least_32_chars_long
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Authentication - Google OAuth
# Get credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3002/auth/google/callback

# Frontend URL (for OAuth redirects)
FRONTEND_URL=http://localhost:5173
